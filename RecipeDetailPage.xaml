<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"		 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipesApp.RecipeDetailPage"
             BackgroundColor="#F5F5F5">

	<ScrollView>
		<VerticalStackLayout Padding="20" Spacing="20">

			<!-- Kép -->
			<Image Source="{Binding Image}"
                   Aspect="AspectFill"
                   HeightRequest="220"
                   Margin="0,0,0,10"
                   />

			<!-- Név -->
			<Label Text="{Binding Name}"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#222"
                   />

			<!-- Konyha -->
			<Label Text="Kitchen:"
                   FontSize="16"
                   TextColor="#555"/>

			<Label Text="{Binding Cuisine}"
                   FontSize="18"
                   TextColor="#333"
                   Margin="0,-10,0,10"/>

			<!-- Idő -->
            <Label Text="Preparation time:"
                   FontSize="16"
                   TextColor="#555"/>

			<Label Text="{Binding PrepTimeMinutes}"
                   FontSize="18"
                   TextColor="#333"
                   Margin="0,-10,0,10"/>

			<!-- Utasítások -->
			<Label Text="Instructions:"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="#000"
                   Margin="0,10,0,5"/>

			<VerticalStackLayout BindableLayout.ItemsSource="{Binding Instructions}" Spacing="8">
				<BindableLayout.ItemTemplate>
					<DataTemplate>
						<HorizontalStackLayout Spacing="6">
							<Label Text="•"
								   FontSize="16"
								   TextColor="#222"/>
							<Label Text="{Binding .}"
								   FontSize="16"
								   TextColor="#333"
								   LineBreakMode="WordWrap"/>
						</HorizontalStackLayout>
					</DataTemplate>
				</BindableLayout.ItemTemplate>
			</VerticalStackLayout>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
