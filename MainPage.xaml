<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipesApp.MainPage"
             BackgroundColor="{StaticResource LightBackground}">

    <CollectionView x:Name="RecipesList" SelectionMode="Single">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame BackgroundColor="White" Margin="10" Padding="10" CornerRadius="10">
                    <VerticalStackLayout>
                        <Label Text="{Binding Name}" FontSize="20" TextColor="{StaticResource DarkText}" />
                        <Label Text="{Binding Cuisine}" FontSize="14" TextColor="Gray"/>
                    </VerticalStackLayout>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
