<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipesApp.RecipeDetailPage"
             BackgroundColor="{StaticResource LightBackground}">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Image x:Name="RecipeImage" HeightRequest="200" Aspect="AspectFill"/>

            <Label x:Name="NameLabel" FontSize="26" FontAttributes="Bold" TextColor="{StaticResource DarkText}"/>
            <Label x:Name="CuisineLabel" FontSize="18" TextColor="Gray"/>
            <Label x:Name="TimeLabel" FontSize="16" TextColor="{StaticResource DarkText}"/>
            <Label x:Name="InstructionsLabel" FontSize="16" TextColor="Black"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
